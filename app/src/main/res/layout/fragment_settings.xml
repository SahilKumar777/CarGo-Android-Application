<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    tools:context=".ui.settings.SettingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Settings"
        android:textSize="16dp"
        android:textStyle="bold"
        android:paddingVertical="16dp"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_margin="4dp"
        android:background="@drawable/input_back"/>
    <TextView
        android:id="@+id/changePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_margin="4dp"
        android:background="@drawable/input_back"/>



    <TextView
        android:id="@+id/privacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_margin="4dp"
        android:background="@drawable/input_back"/>
    <TextView
        android:id="@+id/aboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_margin="4dp"
        android:background="@drawable/input_back"/>
    <TextView
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LogOut"
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_margin="4dp"
        android:background="@drawable/input_back"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Settings"
        android:textSize="16dp"
        android:textStyle="bold"
        android:paddingVertical="16dp"
        android:layout_margin="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@drawable/input_back"
        android:layout_margin="8dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/set_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:text="Setting 1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/set_switch1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@drawable/input_back"
        android:layout_margin="8dp"
        >

        <TextView
            android:id="@+id/set_text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:text="Setting 2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/set_switch2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="8dp"
        android:background="@drawable/input_back">

        <TextView
            android:id="@+id/set_text3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:text="Setting 3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/set_switch3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="8dp"
        android:background="@drawable/input_back">

        <TextView
            android:id="@+id/set_text4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:text="Setting 4"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/set_switch4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>